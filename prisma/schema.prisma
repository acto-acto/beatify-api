generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Track {
  id                    String   @id
  name                  String
  duration              Int
  audio                 String?
  image                 String?
  artist_id             String
  artist_name           String
  album_name            String?
  album_id              String?
  release_date          String?
  created_at            DateTime @default(now())
  updated_at            DateTime @updatedAt
}

model User {
  id                     String   @id @default(uuid())
  email                  String   @unique
  user_name              String   @unique
  password               String
  full_name              String
  avatar_url             String?  @unique
  refresh_token          String?  @unique
  reset_token            String?  @unique
  reset_otp              String?  @unique
  reset_otp_expiry       DateTime?
  created_at             DateTime @default(now())
  updated_at             DateTime @updatedAt
}

